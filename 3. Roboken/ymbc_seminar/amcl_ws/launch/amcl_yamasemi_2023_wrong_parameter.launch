<?xml version="1.0"?>
<launch>
  <arg name="ojama" default="true"/>
  <arg name="beego" default="true"/>
  <arg name="rviz" default="true"/>

  <!--worldファイル読み込み-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find yamasemi_sim)/world/yamasemipractice_2023.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!--ロボット情報読み込み-->
  <group if="$(arg beego)">
    <include file="$(find yamasemi_sim)/launch/beego.launch">
      <arg name="x" value="1.5"/>
      <arg name="y" value="-1.75"/>
      <arg name="z" value="0.0"/>
      <arg name="R" value="0.0"/>
      <arg name="P" value="0.0"/>
      <arg name="Y" value="3.14"/>
      <arg name="ns" default="beego"/>
      <arg name="rviz" default="$(arg rviz)"/>
    </include>
  </group>


<!--ここからmapserver(amclのためのmapをpublishするパッケージ)のコード記入-->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find yamasemi_sim)/map/correctmap.yaml" >
  <param name="frame_id" value="beego/map"/>
  </node>
<!--ここまで-->

<!--<arg name="use_map_topic" default="true"/>-->

<!--ここからamclのコード記入-->
 <node pkg="amcl" type="amcl" name="amcl" output="screen">  
        <remap from="scan" to="beego/scan" />
        <!--<param name="use_map_topic" value="$(arg use_map_topic)"/>-->
        <!-- Publish scans from best pose at a max of 10 Hz -->
        <param name="global_frame_id" value="beego/map"/>
        <param name="odom_frame_id" value="beego/odom"/>
        <param name="base_frame_id" value="beego/base_link"/>
        <param name="odom_model_type" value="diff"/>
        <param name="transform_tolerance" value="0.2" />
        <param name="gui_publish_rate" value="10.0"/>
        <param name="laser_max_beams" value="30"/>
        <param name="min_particles" value="800"/>
        <param name="max_particles" value="2000"/>
        <param name="kld_err" value="0.1"/>
        <param name="kld_z" value="0.99"/>
        <param name="initial_cov_xx" value="0.5"/>
        <param name="initial_cov_yy" value="0.9"/>
        <param name="initial_cov_aa" value="0.068539"/>
        <param name="initial_cov_xx" value="0.2"/>
        <param name="initial_cov_yy" value="0.6"/>
        <param name="initial_cov_aa" value="0.01"/>
        <!--<param name="odom_alpha1" value="0.2"/>-->
        <!--<param name="odom_alpha2" value="0.2"/>-->
        <param name="odom_alpha1" value="0.9"/>
        <param name="odom_alpha2" value="0.2"/>
        <!--<param name="odom_alpha1" value="0.1"/>-->
        <!--<param name="odom_alpha2" value="0.05"/>-->
        <!-- translation std dev, m -->
        <param name="odom_alpha3" value="0.1"/>
        <param name="odom_alpha4" value="0.8"/>
        <!--<param name="odom_alpha3" value="0.2"/>-->
        <!--<param name="odom_alpha4" value="0.1"/>-->
        <param name="odom_alpha5" value="0.8"/>
        <param name="laser_z_hit" value="0.2"/>
        <param name="laser_z_short" value="0.9"/>
        <param name="laser_z_max" value="0.1"/>
        <param name="laser_z_rand" value="0.9"/>
        <param name="laser_sigma_hit" value="0.01"/>
        <param name="laser_lambda_short" value="0.01"/>
        <param name="laser_model_type" value="likelihood_field"/>
        <!-- <param name="laser_model_type" value="beam"/> -->
        <param name="laser_likelihood_max_dist" value="2.0"/>
        <param name="update_min_d" value="0.9"/>
        <!--<param name="update_min_d" value="0.5"/>-->
        <param name="update_min_a" value="0.8"/>
        <param name="resample_interval" value="1"/>
        <!--<param name="resample_interval" value="5"/>-->
        <param name="recovery_alpha_slow" value="0.0"/>
        <param name="recovery_alpha_fast" value="0.0"/>
    </node>
</launch>
